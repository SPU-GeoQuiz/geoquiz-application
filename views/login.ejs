  <body>

  <div class="container">
    <h2>GEOQUIZ DATABASE </h2>
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Sign In</h5>
            <form class="form-signin" method="POST" action="/checkUser">
              <div class="form-label-group">
                  <label for="inputEmail">Email address</label>
                  <input type="text" name="id" class="form-control" placeholder="Email address" required autofocus>
              </div>

              <div class="form-label-group mt-3">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" class="form-control" placeholder="Password" required>

              </div>
                <div class="mt-3">
              <button class="btn btn-lg btn-info btn-block text-uppercase" type="submit">Sign in</button>
                </div>
              <hr class="my-4">
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
