<!DOCTYPE html>
<html>
  <head>
    <meta name="viewpoint" content="width=device-width, initial-scale= 1">
    <title>Add/Remov a country</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

  </head>
  <body>

    <% include ../fixed/nav %>
    <% var data %>
    <div class="container">
      <div class="row justify-content-center mt-5">
        <div class="col-xs-3 col-m-6">
          <div class="input-group" >
            <div class="input-group-prepend">
               <select class="form-control" name="fieldToAdd" id="option">
                  <option value="add">Add a new Country</option>
                  <option value="remove">Remove a new Country</option>
               </select>
             </div>
           <div class="input-group-append">
             <button  onclick ="selectOption()" type="submit" class="btn btn-info">Submit </button>
           </div>
         </div>
       </div>
    </div>

    <div class="justify-content-center">
      <!-- <div class="col-lg-10"> -->
         <form method="POST" action="/addCountry" id ="addCountry" style="display: none;"  autocomplete="off">
           <div class="form-group">
             <div class="row">
             <label class="col-sm-3" > </label>
            </div>
           </div>

           <div class="form-group">
             <div class="row">
             <label class="col-sm-3 quizNumber"> Continent </label>
              <input class="col-sm-5 form-control" name="continent" type="text">
            </div>
           </div>

           <div class="form-group">
             <div class="row">
             <label class="col-sm-3 quizNumber"> Capital </label>
              <input class="form-control col-sm-5" name="capital" type="text">
            </div>
           </div>

          <div class="form-group">
            <div class="row">
            <label class="col-sm-3 quizNumber"> Country name </label>
             <input class="col-sm-5 form-control" name="name" type="text" >
           </div>
          </div>

          <div class="form-group">
            <div class="row">
            <label class="col-sm-3 quizNumber"> Alternative Capital </label>
             <input class="col-sm-5 form-control" name="altCapital" type="text" >
           </div>
          </div>

          <div class="form-group">
            <div class="row">
            <label class="col-sm-3 quizNumber"> Alternative Country Names </label>
             <input class="col-sm-5 form-control" name="altName" type="text">
           </div>
          </div>

          <div class="form-group">
            <div class="row">
            <label class="col-sm-3 quizNumber"> Misspellings for Capital </label>
             <input class="col-sm-5 form-control" name="misspell_capital" type="text" >
           </div>
          </div>

          <div class="form-group">
            <div class="row">
            <label class="col-sm-3 quizNumber"> Misspellings for Country </label>
             <input class="col-sm-5 form-control" name="misspell_name" type="text" >
           </div>
          </div>

          <div class="form-group">
            <div class="row">
            <label class="col-sm-3 quizNumber"> Geometry Type </label>
             <input class="col-sm-5 form-control" name="type" type="text">
           </div>
          </div>

          <div class="form-group">
            <div class="row">
            <label for ="input-lg" class="col-sm-3 quizNumber"> Coordinates </label>
             <!-- <input class="col-sm-5 form-control form-control-lg" name="name" type="text" > -->
             <textarea class="col-sm-5 form-control" rows="4" type="text" name="coordinates" ></textarea>
           </div>
          </div>
          <div class="text-center">
          <button type="submit" class="btn btn-outline-info">Submit </button>
        </div>
      </form>
    <!-- </div> -->
    </div>

    <div class="row justify-content-center">
      <form id="removeCountry" style="display: none;" method="POST" action="/removeCountry" autocomplete="off">
        <div class="row">
          <label>Enter Country Name to Remove: </label>
        </div>
        <div class="row">
          <div class="col-lg-4">
          <input class="form-control" name="countryName" type="text">
        </div>
          <div class="col-lg-2">
          <button class="form-control btn-outline-info" type="submit">Remove </button>
          </div>
        </div>
      </form>
    </div>

  </div>
  <script type="text/javascript">
          function selectOption(){
            var option = $("#option :selected").val();
            if (option == "add"){
              $('#addCountry').show();
              $('#removeCountry').hide();
            }
            if (option =="remove"){
              $('#removeCountry').show();
              $("#addCountry").hide();
            }
          }
  </script>
  </body>
</html>
